<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:theme="@style/SettingsTheme"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Extra Keys"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#000"
        android:textColor="#FFF" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#222"
        android:baselineAligned="true"
        android:padding="7dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:paddingBottom="16dp">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="!"
                        android:id="@+id/key_exclamation"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:padding="7dp"
                        android:minWidth="30dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="\@"
                        android:id="@+id/key_at"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="#"
                        android:id="@+id/key_hash"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:padding="7dp"
                        android:minWidth="30dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="$"
                        android:id="@+id/key_dollars"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="%"
                        android:id="@+id/key_percent"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="^"
                        android:id="@+id/key_carat"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="&amp;"
                        android:id="@+id/key_ampersand"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="*"
                        android:id="@+id/key_asterisk"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="("
                        android:id="@+id/key_openbracket"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=")"
                        android:id="@+id/key_closebracket"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="'"
                        android:id="@+id/key_singlequote"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text='"'
                        android:id="@+id/key_doublequote"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="/"
                        android:id="@+id/key_slash"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="\?"
                        android:id="@+id/key_question"
                        android:background="@drawable/top_key"
                        android:textColor="#FFF"
                        android:layout_marginRight="2px"
                        android:minWidth="30dp"
                        android:padding="7dp"
                        android:layout_marginLeft="2px" />
                </TableRow>
            </TableLayout>

            <Space
                android:layout_width="0px"
                android:layout_height="20px"
                android:layout_weight="1"
                android:id="@+id/space2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/submit_button"
                android:background="@drawable/top_key"
                android:textColor="#FFF"
                android:layout_gravity="center_vertical" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#222">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset performance stats"
                android:id="@+id/reset_button"
                android:background="@drawable/top_key"
                android:textColor="#FFF"
                android:paddingRight="5dp"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="16dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch Keyboard..."
                android:id="@+id/switch_input_button"
                android:background="@drawable/top_key"
                android:textColor="#FFF"
                android:paddingRight="5dp"
                android:paddingLeft="5dp" />

            <Space
                android:layout_width="0px"
                android:layout_height="20px"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:id="@+id/close_button"
                android:layout_column="3"
                android:textColor="#CCC"
                android:background="@drawable/vowel_key"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="2px"
                android:layout_marginLeft="2px" />

            <Space
                android:layout_width="0px"
                android:layout_height="20px"
                android:id="@+id/space"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keyboard Settings..."
                android:id="@+id/settings_button"
                android:background="@drawable/top_key"
                android:textColor="#FFF"
                android:paddingRight="5dp"
                android:paddingLeft="5dp" />

        </TableRow>
    </TableLayout>

</LinearLayout>